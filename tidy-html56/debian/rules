#! /usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS=hardening=+all

%:
	echo -------- dh $@
	dh $@ --parallel

override_dh_auto_configure:
	dh_auto_configure -- \
		-DTIDY_CONSOLE_SHARED:BOOL=YES \
		-DTIDY_COMPAT_HEADERS:BOOL=YES \
		-DTIDY_CONFIG_FILE:STRING=/etc/tidy.conf \
		-DTIDY_USER_CONFIG_FILE:STRING=~/.tidyrc \
		-DCMAKE_INSTALL_PREFIX=/opt/tidy56
		-DCMAKE_LIBRARY_PATH=/opt/tidy56
		-DCMAKE_PREFIX_PATH=/opt/tidy56


override_dh_installchangelogs:
	echo override_dh_installchangelogs

override_dh_installdocs:
	echo override_dh_installdocs


override_dh_auto_install:
	echo -1------override_dh_auto_install
	dh_auto_install
	echo -2------override_dh_auto_install
	#pwd
	#ls
	#mkdir -p debian/opt/tidy56
	#cp tidy debian/opt/tidy56

